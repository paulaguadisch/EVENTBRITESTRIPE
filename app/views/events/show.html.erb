<h1 class="text-center"> Évènement : <%= @event.name %></h1>

<div class="text-center">
	<p> <%= @event.description %></p>
	<p> <%= @event.date %></p>
	<p> <%= @event.place %></p>
</div>


<div class="text-center">

<%= form_tag subscribe_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
    	<p> Pour rejoindre cet évènement tu dois payer le prix suivant : <%= @event.price.to_f / 100 %>€</p>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Paiement pour cet event"
          data-amount="<%= @event.price %>"
          data-currency="eur"
          data-locale="auto"></script>
<% end %>

</div>

